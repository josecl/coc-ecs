{
  "name": "coc-ecs",
  "version": "0.3.0",
  "description": "PHP CS Fixer (PHP Coding Standards Fixer) extension for coc.nvim",
  "author": "yaegassy <yosstools@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "keywords": [
    "coc.nvim",
    "php",
    "ecs",
    "vim",
    "neovim"
  ],
  "engines": {
    "coc": "^0.0.80"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yaegassy/coc-ecs"
  },
  "scripts": {
    "lint": "eslint src --ext ts",
    "clean": "rimraf lib",
    "watch": "node esbuild.js --watch",
    "build": "node esbuild.js",
    "prepare": "node esbuild.js"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "semi": true
  },
  "devDependencies": {
    "@types/node": "^14.14.22",
    "@types/node-fetch": "^2.5.7",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "coc.nvim": "^0.0.80",
    "esbuild": "^0.8.42",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2",
    "https-proxy-agent": "^5.0.0",
    "node-fetch": "^2.6.0",
    "tmp": "^0.1.0"
  },
  "activationEvents": [
    "onLanguage:php"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "coc-ecs configuration",
      "properties": {
        "ecs.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable coc-ecs extension"
        },
        "ecs.downloadMajorVersion": {
          "type": "number",
          "enum": [
            2,
            3
          ],
          "default": 3,
          "description": "Specify the major version of ecs to download for the extension",
          "scope": "window"
        },
        "ecs.enableActionProvider": {
          "type": "boolean",
          "default": true,
          "description": "Enable codeAction provider"
        },
        "ecs.enableFormatProvider": {
          "type": "boolean",
          "default": false,
          "description": "Enable format provider"
        },
        "ecs.toolPath": {
          "type": "string",
          "default": "",
          "description": "The path to the ecs tool (Absolute path)"
        },
        "ecs.useCache": {
          "type": "boolean",
          "default": false,
          "description": "Use a cache file when fixing files (--using-cache)"
        },
        "ecs.allowRisky": {
          "type": "boolean",
          "default": false,
          "description": "Are risky fixers allowed (--allow-risky)"
        },
        "ecs.config": {
          "type": "string",
          "default": "",
          "description": "Path to a .php_cs or .ecs.php file (--config)"
        },
        "ecs.rules": {
          "type": "string",
          "default": "@PSR12",
          "description": "Rules to use when fixing files (--rules)"
        }
      }
    },
    "commands": [
      {
        "command": "ecs.fix",
        "title": "Run ecs fix"
      },
      {
        "command": "ecs.download",
        "title": "Download ecs"
      }
    ]
  }
}
